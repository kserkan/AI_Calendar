@model SmartCalendar.Models.Dtos.UserRegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg rounded-4 border-0 p-4" style="max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus-fill fs-1 text-success"></i>
            <h3 class="fw-bold mt-2">Yeni Hesap Oluştur</h3>
            <p class="text-muted small">Lütfen bilgilerinizi eksiksiz giriniz.</p>
        </div>

        <!-- ModelState genel hataları -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger rounded-3 shadow-sm">
                @Html.ValidationSummary()
            </div>
        }

        <!-- TempData mesajı örneği (isteğe bağlı) -->
        @if (TempData["RegisterError"] != null)
        {
            <div class="alert alert-danger rounded-3 shadow-sm">
                @TempData["RegisterError"]
            </div>
        }

        <form method="post" novalidate>
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold">Ad Soyad</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input asp-for="FullName" class="form-control" placeholder="Adınız Soyadınız" />
                </div>
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="example@mail.com" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="form-label fw-semibold">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Minimum 6 karakter" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">
                    <i class="bi bi-check-circle-fill me-1"></i> Kayıt Ol
                </button>
            </div>
        </form>

        <div class="text-center mt-4">
            <small>Zaten hesabınız var mı?</small><br />
            <a href="/Account/Login" class="fw-semibold text-decoration-none">Giriş Yap</a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
