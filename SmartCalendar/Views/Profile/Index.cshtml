@model SmartCalendar.Models.Dtos.ProfileUpdateDto

@{
    ViewData["Title"] = "Profil Ayarları";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <!-- Profil Güncelleme Kartı -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-primary text-white rounded-top-4 p-4">
                    <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>Profil Bilgileri</h3>
                    <p class="mb-0 small">Profil bilgilerinizi aşağıdan güncelleyebilirsiniz.</p>
                </div>

                <div class="card-body p-4">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success shadow-sm rounded-3">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger shadow-sm rounded-3">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <form method="post" asp-action="UpdateProfile" novalidate>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"><i class="bi bi-person-fill me-1"></i>Ad Soyad</label>
                            <input asp-for="FullName" class="form-control form-control-lg" placeholder="Adınızı ve Soyadınızı girin" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"><i class="bi bi-envelope-fill me-1"></i>Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" type="email" placeholder="example@mail.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="border-top my-4"></div>

                        <h5 class="text-primary mb-3"><i class="bi bi-shield-lock-fill me-1"></i>Şifre Değiştir (Opsiyonel)</h5>

                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">Mevcut Şifre</label>
                            <input asp-for="CurrentPassword" class="form-control form-control-lg" type="password" placeholder="Mevcut şifreniz" />
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="NewPassword" class="form-label">Yeni Şifre</label>
                            <input asp-for="NewPassword" class="form-control form-control-lg" type="password" placeholder="Yeni şifre" />
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm">
                                <i class="bi bi-save2-fill me-1"></i>Bilgileri Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- E-Posta Tercihi -->
            <div class="card mt-5 shadow-sm rounded-4 border-0">
                <div class="card-header bg-gradient bg-secondary text-white rounded-top-4 p-3">
                    <h5 class="mb-0"><i class="bi bi-bell-fill me-2"></i>Hatırlatma E-Posta Ayarları</h5>
                </div>
                <div class="card-body p-4">
                    @await Html.PartialAsync("_EmailReminderForm")
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
